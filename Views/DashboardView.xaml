<UserControl x:Class="TradeExec.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TradeExec.Views"
             mc:Ignorable="d" 
             d:DesignHeight="585" d:DesignWidth="950"
             Background="#1B1F26"
             ClipToBounds="True">
    <Grid>
        <!-- Layout -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="170"/>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <StackPanel Grid.Column="0"
                    Margin="15,20,0,0"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left">

            <!-- Sidebar header -->
            <StackPanel Margin="0,0,0,20">
                <TextBlock FontSize="18"
                           FontWeight="SemiBold"
                           Foreground="White"
                           FontFamily="{StaticResource LeagueSpartan}"
                           Margin="0,0,0,20">                    
                    <TextBlock Text="Trade" Foreground="#6B9AFF"/>Exec<TextBlock Text="." Foreground="#6B9AFF" FontSize="30"/>
                </TextBlock>



                <TextBlock Text="Welcome, {User}"
                           FontSize="12"
                           FontWeight="Bold"
                           Foreground="White"
                           FontFamily="{StaticResource LeagueSpartan}"
                           Margin="0,0,0,10"/>

                <Line X1="0" X2="120"
                      Stroke="#D8DEE9"
                      StrokeThickness="0.5"
                      Margin="0,0,0,50"/>
                
            </StackPanel>

            <!-- Section: Main Menu -->
            <TextBlock Text="Main Menu"
                       FontSize="10"
                       FontFamily="{StaticResource LeagueSpartan}"
                       FontWeight="ExtraLight"
                       Foreground="White"
                       Margin="0,0,0,10"/>

            <Button Content="Dashboard"
                    Style="{StaticResource FlatSidebarButtonStyle}"
                    Command="{Binding ShowDashboardCommand}"
                    FontWeight="Light"
                    Margin="0,0,0,5" Width="120"/>
            <Button Content="Server Status"
                    Style="{StaticResource FlatSidebarButtonStyle}"
                    Command="{Binding ShowAccountsCommand}"
                    FontWeight="Light"
                    Margin="0,0,0,5" Width="120"/>
            <Button Content="Accounts"
                    Style="{StaticResource FlatSidebarButtonStyle}"
                    Command="{Binding ShowServerCommand}"
                    FontWeight="Light"
                    Margin="0,0,0,5" Width="120"/>

            <!-- Section: Support -->
            <TextBlock Text="Support"
                       FontSize="10"
                       FontFamily="{StaticResource LeagueSpartan}"
                       FontWeight="ExtraLight"
                       Foreground="White"
                       Margin="0,0,0,10"/>
            <Button Content="Send Ticket"
                    Style="{StaticResource FlatSidebarButtonStyle}"
                    Command="{Binding ShowSupportCommand}"
                    FontWeight="Light"
                    Margin="0,0,0,5" Width="120"/>
        </StackPanel>


        <StackPanel Grid.Column="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="0,10,10,0">
            <Ellipse Width="22" Height="22" Margin="0,0,5,0">
                <Ellipse.Fill>
                    <ImageBrush ImageSource="/Extra/Images/min.png" Stretch="UniformToFill"/>
                </Ellipse.Fill>
            </Ellipse>
            <Ellipse Width="22" Height="22">
                <Ellipse.Fill>
                    <ImageBrush ImageSource="/Extra/Images/close.png" Stretch="UniformToFill"/>
                </Ellipse.Fill>
            </Ellipse>
        </StackPanel>

        <!-- Content Frame -->
        <Border Grid.Column="1"
                Margin="20,40,-30,-35"
                Background="#8021252D"
                CornerRadius="20"
                BorderBrush="#2E3440"
                BorderThickness="1">
            <ContentControl Content="{Binding CurrentPage}"/>
        </Border>
    </Grid>
</UserControl>