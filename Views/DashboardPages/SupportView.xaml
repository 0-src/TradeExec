<UserControl x:Class="TradeExec.Views.DashboardPages.SupportView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TradeExec.Views.DashboardPages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <StackPanel Margin="30">
            <!-- Title -->
            <TextBlock Text="Support"
                       FontSize="24"
                       FontFamily="{StaticResource LeagueSpartan}"
                       FontWeight="SemiBold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"
                       Effect="{DynamicResource DefaultShadow}"/>

            <!-- Ticket TextBox -->
            <Grid>
                <TextBox x:Name="TicketTextBox"
                         Width="636"
                         Height="300"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         FontSize="14"
                         FontFamily="{StaticResource LeagueSpartan}"
                         Foreground="White"
                         Background="#1B1F26"
                         BorderBrush="#2E3440"
                         BorderThickness="1"
                         Padding="10"
                         VerticalScrollBarVisibility="Auto"/>

                <!-- Placeholder (only shown if TextBox is empty) -->
                <TextBlock x:Name="PlaceholderText"
                           Text="Enter details of your issue..."
                           FontSize="14"
                           FontFamily="{StaticResource LeagueSpartan}"
                           Foreground="#80FFFFFF"
                           Margin="60,10,0,0"
                           IsHitTestVisible="False"
                           VerticalAlignment="Top"
                           Visibility="Visible"/>
            </Grid>

            <!-- Submit Button -->
            <Button Content="Send Ticket"
                    Margin="0,10,0,0"
                    Width="281"
                    Height="35"
                    Background="#376FAE"
                    Foreground="White"
                    FontSize="14"
                    FontFamily="{StaticResource LeagueSpartan}"
                    FontWeight="SemiBold"
                    BorderThickness="0"
                    HorizontalAlignment="Center"
                    Cursor="Hand"
                    Effect="{DynamicResource DefaultShadow}"/>
    </StackPanel>
</UserControl>

