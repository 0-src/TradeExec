<UserControl x:Class="TradeExec.Views.DashboardPages.AccountsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TradeExec.Views.DashboardPages"
             mc:Ignorable="d" d:DesignWidth="800" Height="500" BorderThickness="0">


    <Border Margin="20"
            Background="#8021252D"
            BorderBrush="#2E3440"
            BorderThickness="1"
            CornerRadius="20"
            Padding="20"
            Effect="{DynamicResource DefaultShadow}">

        <StackPanel>
            <!-- Title -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,20">
                <Ellipse Width="18" Height="18" Margin="0,0,10,0">
                    <Ellipse.Fill>
                        <ImageBrush ImageSource="/Assets/Account.png" Stretch="UniformToFill"/>
                    </Ellipse.Fill>
                </Ellipse>
                <TextBlock Text="Accounts"
                           FontSize="24"
                           FontWeight="Light"
                           FontFamily="{StaticResource LeagueSpartan}"
                           Foreground="White"/>
            </StackPanel>

            <Separator Margin="0,0,0,20" Background="White" Height="1"/>

            <!-- Account Rows -->
            <ItemsControl ItemsSource="{Binding Accounts}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Height="45"
                    Background="#0FD9D9D9"
                    CornerRadius="5"
                    Padding="10"
                    Margin="0,0,0,15"
                    Effect="{DynamicResource DefaultShadow}">

                            <DockPanel LastChildFill="False" VerticalAlignment="Center">
                                <!-- Toggle -->
                                <CheckBox IsChecked="{Binding IsActive}"
                              Width="18" Height="18"
                              VerticalAlignment="Center"
                              Margin="0,0,10,0"/>

                                <!-- Account Info -->
                                <StackPanel Orientation="Horizontal" Margin="0,0,10,0">
                                    <TextBlock Text="{Binding AccountName}"
                                   FontSize="20"
                                   FontFamily="{StaticResource LeagueSpartan}"
                                   Foreground="White"
                                   VerticalAlignment="Center"
                                   Margin="0,0,30,0"/>
                                    <TextBlock Text="{Binding Strategy}"
                                   FontSize="20"
                                   FontFamily="{StaticResource LeagueSpartan}"
                                   Foreground="White"
                                   VerticalAlignment="Center"/>
                                </StackPanel>

                                <DockPanel DockPanel.Dock="Right" />

                                <!-- Buttons (can be hooked with commands later) -->
                                <Button Content="Edit"
                            Width="75" Height="30"
                            Margin="0,0,10,0"
                            Background="#1E222A"
                            Foreground="White"
                            FontSize="16"
                            FontFamily="{StaticResource LeagueSpartan}"
                            BorderThickness="0"
                            VerticalAlignment="Center"/>

                                <Button Content="Delete"
                            Width="75" Height="30"
                            Background="#1E222A"
                            Foreground="White"
                            FontSize="16"
                            FontFamily="{StaticResource LeagueSpartan}"
                            BorderThickness="0"
                            VerticalAlignment="Center"/>
                            </DockPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </Border>
</UserControl>